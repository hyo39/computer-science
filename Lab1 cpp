#include<iostream>
using namespace std;

int main ()
{
    double length;
    double width;
    double area;
    double perimeter;
    cout << "Program to compute and output the perimeter and "
       << "area of a rectangle." << endl;
    
    cout << "Enter length ";
    cin >> length;
    cout << "Enter width: ";
    cin >> width; 

    area = length * width; 
    perimeter = 2 * (length + width);

    cout << "The area of the rectangle is: " << area << endl;
    cout << "The perimeter of the rectangle is: " << perimeter << endl; 

    return 0; 
